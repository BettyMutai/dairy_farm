<p id="notice"><%= notice %></p>

<h1>Dairies</h1>



    <% @dairies.each do |dairy| %>
        Date:<p><%= dairy.date %></p>
        Milk:<p><%= dairy.milk %></p>
        <p><%= link_to 'Edit', edit_dairy_path(dairy) %> | <%= link_to 'Destroy', dairy, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div id="container" style="width:100%; height:400px;"></div>

<script>
Highcharts.chart('container', {
  chart: {
      type: 'line'
  },

    title: {
        text: 'My Dairy Farm'
    },

    yAxis: {
        title: {
            text: 'Date of milking'
        }
    },
    legend: {
        layout: 'vertical',
        align: 'right',
        verticalAlign: 'middle'
    },

    plotOptions: {
        series: {
            label: {
                connectorAllowed: false
            },
            pointStart: 1
        }
    },

    series: [{
        name: 'Milk in litres',
        data: [<% @dairies.each do |dairy| %>
                 <%= dairy.milk %>,
               <% end %>]
    }],

    responsive: {
        rules: [{
            condition: {
                maxWidth: 500
            },
            chartOptions: {
                legend: {
                    layout: 'horizontal',
                    align: 'center',
                    verticalAlign: 'bottom'
                }
            }
        }]
    }

});
</script>
